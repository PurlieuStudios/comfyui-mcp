{
  "mcpServers": {
    "comfyui-mcp": {
      "command": "python",
      "args": ["-m", "comfyui_mcp.server"],
      "env": {
        "COMFYUI_URL": "http://comfyui-container:8188",
        "COMFYUI_OUTPUT_DIR": "/app/generated_images",
        "COMFYUI_TIMEOUT": "180.0"
      },
      "cwd": "/app"
    }
  }
}
