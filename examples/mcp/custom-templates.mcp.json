{
  "mcpServers": {
    "comfyui-mcp": {
      "command": "python",
      "args": [
        "-m",
        "comfyui_mcp.server",
        "--template-dir",
        "./my-custom-workflows"
      ],
      "env": {
        "COMFYUI_URL": "http://localhost:8188",
        "COMFYUI_OUTPUT_DIR": "./my-generated-images"
      },
      "cwd": "/path/to/game/project"
    }
  }
}
